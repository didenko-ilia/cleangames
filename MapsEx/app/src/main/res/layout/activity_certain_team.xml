<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CertainTeamActivity">

    <TextView android:text=" Список участников:"
        android:id="@+id/listUsersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listUsers"
        android:layout_below="@+id/listUsersText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Присоединиться к команде"
        android:id="@+id/Join"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="100dp"
        android:layout_toStartOf="@+id/Map"
        android:layout_toLeftOf="@+id/Map" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выйти из команды"
        android:id="@+id/Leave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="150dp"
        android:layout_toRightOf="@+id/listUsersText"
        android:layout_toEndOf="@+id/listUsersText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Карта"
        android:id="@+id/Map"
        android:layout_alignBottom="@+id/Join"
        android:layout_toLeftOf="@+id/Leave"
        android:layout_toStartOf="@+id/Leave"
        android:layout_alignTop="@+id/Join"
        android:clickable="true" />

</RelativeLayout>
